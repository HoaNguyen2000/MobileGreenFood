<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/static_rv_bg"
    android:backgroundTint="#0DBDB6B6"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/imgCartItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/asiafood2" />

    <TextView
        android:id="@+id/cartProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/semibold"
        android:text="TextView"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/cart_product_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgCartItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cart_btn_up_qty"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCartItem"
        app:srcCompat="@drawable/ic_group_401" />

    <ImageView
        android:id="@+id/cart_btn_down_qty"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCartQuantity"
        app:layout_constraintStart_toEndOf="@+id/tvCartQuantity"
        app:layout_constraintTop_toTopOf="@+id/tvCartQuantity"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/ic_group_400" />

    <TextView
        android:id="@+id/tvCartQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/semibold"
        android:text="1"
        android:textColor="#373b54"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cart_btn_up_qty"
        app:layout_constraintStart_toEndOf="@+id/cart_btn_up_qty"
        app:layout_constraintTop_toTopOf="@+id/cart_btn_up_qty" />

    <TextView
        android:id="@+id/cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="$99"
        android:textColor="#F44336"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cartProductName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cartProductName" />

    <ImageView
        android:id="@+id/cart_btn_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/cart_product_price"
        app:layout_constraintStart_toStartOf="@+id/cart_product_price"
        app:layout_constraintTop_toBottomOf="@+id/cart_product_price"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/cart_btn_update_qty"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_btn_delete"
        app:layout_constraintEnd_toStartOf="@+id/cart_btn_delete"
        app:layout_constraintTop_toTopOf="@+id/cart_btn_delete"
        app:srcCompat="@drawable/ic_baseline_check_24" />
</androidx.constraintlayout.widget.ConstraintLayout>